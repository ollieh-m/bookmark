<!DOCTYPE html>
<html>

  <head>
    <title>Bookmark Manager</title>
  </head>

  <body>
    <% if flash[:errors] %>
      <ul>
        <% flash[:errors].each do |error| %>
          <li><%= error[0] %></li>
        <% end %>
      </ul>
    <% end %>
    <% if current_user %>
      <h2>Welcome <%= current_user.email %></h2>
    <% end %>
    <%= yield %>
  </body>

</html>